<?xml version="1.0" encoding="UTF-8"?>

<?import com.devccv.popuprss.widget.MyToggleNode?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="408.0" prefWidth="530.0" stylesheets="@../css/Settings.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.devccv.popuprss.controller.SettingsController">
    <VBox spacing="10">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <MFXPasswordField fx:id="rssField" floatMode="BORDER" floatingText="%settings_rss_link" prefHeight="20.0"
                          prefWidth="510.0"/>
        <HBox alignment="CENTER" spacing="2">
            <ImageView fx:id="lockIcon" fitHeight="20" fitWidth="20"/>
            <Label text="%settings_lock_label">
                <font>
                    <Font name="Sarasa Mono Slab SC" size="12.0"/>
                </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER_RIGHT">
            <MyToggleNode fx:id="saveButton" onMouseClicked="#onMouseClickedSaveBtn" prefHeight="30.0"
                          prefWidth="90.0" text="%save_config_button" rippleColor="#4a90e2" disable="true">
                <font>
                    <Font name="Sarasa Mono Slab SC" size="12.0"/>
                </font>
            </MyToggleNode>
        </HBox>
    </VBox>
</AnchorPane>
